@model GamingRoom.Models.Users

@{
    ViewBag.Title = "Elimina Utente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="min-height:100vh">
    <div class="row justify-content-center align-items-center" style="height:100%">
        <div class="col-md-8">
            <div class="card mt-5 text-white" style="background-color: rgb(157, 0, 255)!important">
                <div class="card-header">
                    <h2 class="text-center">Elimina Utente</h2>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <h3 class="text-center text-white">Sei sicuro di voler eliminare questo utente?</h3>
                    <dl class="dl-horizontal">
                        <dt>Nome Azienda</dt>
                        <dd>@Model.BusinessDetails.BusinessName</dd>
                        <dt>Username</dt>
                        <dd>@Model.Username</dd>
                        <dt>Email</dt>
                        <dd>@Model.Email</dd>
                        <dt>Ruolo</dt>
                        <dd>@Model.Role</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    @using (Html.BeginForm("Delete", "Users", new { id = Model.UserID }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Elimina</button>
                    }
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Annulla</a>
                </div>
            </div>
        </div>
    </div>
</div>
