@model GamingRoom.Models.Users

@{
    ViewBag.Title = "User Details";
}

<div class="container" style="height:100vh">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card my-5 text-white" style="background-color: rgb(157, 0, 255)!important">
                <div class="card-header">
                    <h2 class="text-center">Dettagli Utente</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BusinessDetails.BusinessName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.BusinessDetails.BusinessName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Username)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Password)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Role)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                    </dl>
                </div>
                <div class="card-footer text-muted">
                    <a href="@Url.Action("Edit", new { id = Model.UserID })" class="btn btn-primary">Modifica</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Torna alla Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
