@model GamingRoom.Models.Teams
@using System.Linq

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container mt-5">
    <div class="row" >
        <!-- Colonna principale per la card del team -->
        <div class="col-12 mb-4" >
            <!-- Card Team Centrale -->
            <div class="card text-white bg-middlepurple " >
                <div class="card-header text-center">
                    <h1>@Model.Name</h1>
                </div>
                <img src="@Url.Content("~/Content/ImgTeams/" + Model.Photo)"style="max-height:900px" class="card-img-top" alt="@Model.Name"  object-fit: cover;">
                <div class="card-body">
                    <h4 class="card-title">Dettagli Team</h4>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Inizia la riga per le card dei giocatori -->
    <div class="row">
        <!-- Verifica se ci sono giocatori e crea una card per ciascuno -->
        @if (Model.Players.Any())
        {
            foreach (var player in Model.Players)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4 ">
                    <div class="card text-white bg-middlepurple h-100">
                        <div class="card-header text-center">
                            <h5>@player.Nickname</h5>
                        </div>
                        <img src="@Url.Content("~/Content/ImgPlayers/" + player.Photo)" class="card-img-top" alt="@player.Nickname" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-text"><strong>Nome:</strong> @player.Name</p>
                            <p class="card-text"><strong>Cognome:</strong> @player.Surname</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
