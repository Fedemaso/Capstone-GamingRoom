@model GamingRoom.Models.Teams

@{
    ViewBag.Title = "Edit Team";
}

<div  style="height:100vh">
    
            <h2 class="text-center text-white mt-5">Modifica Squadra</h2>
            @using (Html.BeginForm("Edit", "Teams", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal ms-5", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group text-white">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.TeamID)

                    <div class="form-group">
                        <label for="Name" class="col-md-2 control-label">Nome Squadra</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Description" class="col-md-2 control-label">Descrizione</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CreatedBy" class="col-md-2 control-label">Creato Da</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.CreatedBy, (SelectList)ViewBag.Users, "Scegli Utente", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="PhotoFile" class="col-md-2 control-label">Logo Squadra</label>
                        <div class="col-md-10">
                            <input type="file" name="PhotoFile" class="form-control" />
                            @if (Model.Photo != null)
                            {
                                <div class="mt-2">
                                    <img src="@Url.Content("~/Content/ImgTeams/" + Model.Photo)" alt="Team Photo" class="img-fluid" style="max-width: 200px;" />
                                </div>
                            }
                            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salva" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    @Html.ActionLink("Torna alla Lista", "Index", null, new { @class = "btn btn-secondary text-white ms-3" })
                </div>
            }
        </div>
  

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
