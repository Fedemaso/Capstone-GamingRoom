@model GamingRoom.Models.BusinessDetails

@{
    ViewBag.Title = "Elimina Dettagli Azienda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="min-height:100vh">
    <div class="row justify-content-center align-items-center" style="height:100%">
        <div class="col-md-8">
            <div class="card mt-5 text-white" style="background-color: rgb(157, 0, 255)!important">
                <div class="card-header">
                    <h2 class="text-center">Elimina Dettagli Azienda</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-white">Sei sicuro di voler eliminare questi dettagli aziendali?</h3>
                    <dl class="dl-horizontal">
                        <dt>Nome Azienda</dt>
                        <dd>@Model.BusinessName</dd>
                        <dt>Indirizzo</dt>
                        <dd>@Model.Address</dd>
                        <dt>Numero di Telefono</dt>
                        <dd>@Model.PhoneNumber</dd>
                        <dt>Sito Web</dt>
                        <dd>@Model.Website</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    @using (Html.BeginForm("Delete", "BusinessDetails", new { id = Model.BusinessID }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Elimina</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Annulla</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
