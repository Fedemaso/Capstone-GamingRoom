@model GamingRoom.Models.Venues

@{
    ViewBag.Title = "Create Venue";
}

<h2 class="text-center">Crea Arena</h2>

@using (Html.BeginForm("Create", "Venues", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal ms-5", @style = "height:100vh", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group text-white">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Name -->
        <div class="form-group">
            <div class="ms-3">Nome Arena</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Address -->
        <div class="form-group">
            <div class="ms-3">Indirizzo</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Capacity -->
        <div class="form-group">
            <div class="ms-3">Capacità</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Image Upload -->
        <div class="form-group">
            <div class="ms-3">Immagine</div>
            <div class="col-md-10">
                <input type="file" name="image" class="form-control" />
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Torna alla Lista", "Index", null, new { @class = "btn btn-default text-white" })
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
