@model IEnumerable<GamingRoom.Models.EventTitles>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Titoli ed Eventi</h2>

<p>
    @Html.ActionLink("Crea Nuovo", "Create", null, new { @class = "btn btn-primary ms-3" }) 
</p>
<div class="table-responsive" style="height:100vh">
    <table class="table table-hover text-white fs-5">
        <thead class="bg-primary">
            <tr>
                <th>
                    Nome Evento
                </th>
                <th>
                    Titolo Videogioco
                </th>
                <th></th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Events.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titles.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Modifica", "Edit", new { id = item.EventTitleID }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Dettagli", "Details", new { id = item.EventTitleID }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Elimina", "Delete", new { id = item.EventTitleID }, new { @class = "btn btn-danger btn-sm" })
                   </td>
                </tr>
            }
        </tbody>
    </table>
</div>
