@model GamingRoom.Models.EventTitles

@{
    ViewBag.Title = "Details";
}

<div class="container" style="height:100vh">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card my-5 text-white" style="background-color: rgb(157, 0, 255)!important">
                <div class="card-header">
                    <h2 class="text-center">Dettagli Titolo Evento</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nome Evento</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Events.Name)</dd>

                        <dt class="col-sm-4">Nome Titolo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Titles.Name)</dd>
                    </dl>
                </div>
                <div class="card-footer text-muted">
                    <a href="@Url.Action("Edit", new { id = Model.EventTitleID })" class="btn btn-primary">Modifica</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Torna alla Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
