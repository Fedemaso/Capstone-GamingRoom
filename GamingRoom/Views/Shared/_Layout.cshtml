        </ul>*@





    <div>
        @RenderBody()



    </div>





    @Scripts.Render("~/bundles/jquery")
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @RenderSection("scripts", required: false)

    <!-- Script personalizzati -->
    <script>
        $(document).ready(function () {
            $('#carrelloModal').on('show.bs.modal', function (e) {
                var button = $(e.relatedTarget); // Il pulsante che ha attivato il modal
                var url = button.data('url'); // Estrai l'URL dalla data-* attributes del pulsante

                var modal = $(this);
                modal.find('.modal-body').load(url); // Carica il contenuto della partial view nell'elemento con classe .modal-body
            });
        });
    </script>



</body>
</html>
