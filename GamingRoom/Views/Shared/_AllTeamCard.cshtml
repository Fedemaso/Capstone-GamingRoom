
@model GamingRoom.Models.Teams

<div class="team-card">
    <div class="team-thumb">
        <img src="@Url.Content("~/Content/ImgTeams/" + Model.Photo)" class="img-responsive" alt="@Model.Name">
        <div class="team-hover">
            <div class="team-item-teams">
                <h3>@Model.Name</h3>
                <div class="team-info">
                    <h4>Giocatori:</h4> <p>@string.Join(", ", Model.Players.Select(p => p.Nickname))</p>
                    <!-- Aggiungi altri dettagli del team qui se necessario -->
                    <a href="@Url.Action("UserTeamDetails", "Teams", new { id = Model.TeamID })" class="btn btn-primary">Dettagli team</a>
                </div>
            </div>
        </div>
    </div>
</div>


