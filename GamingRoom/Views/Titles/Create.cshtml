@model GamingRoom.Models.Titles

@{
    ViewBag.Title = "Create Title";
}

<h2 class="text-center">Crea Titolo</h2>

@using (Html.BeginForm("Create", "Titles", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal ms-5", @style = "height:100vh", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group text-white">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Name -->
        <div class="form-group">
            <div class="ms-3">Nome Titolo</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Description -->
        <div class="form-group">
            <div class="ms-3">Descrizione</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- ProductionHouse -->
        <div class="form-group">
            <div class="ms-3">Casa di Produzione</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductionHouse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductionHouse, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Photo -->
        <div class="form-group">
            <div class="ms-3">Copertina Titolo</div>
            <div class="col-md-10">
                <input type="file" name="titlePhoto" id="titlePhoto" class="form-control" />
                <!-- Add validation message for Photo if necessary -->
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Torna alla Lista", "Index", null, new { @class = "btn btn-default text-white " })
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
