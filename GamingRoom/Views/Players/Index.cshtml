@model IEnumerable<GamingRoom.Models.Players>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Riepilogo Players</h2>

<p>
    @Html.ActionLink("Crea Player", "Create", null, new { @class = "btn btn-primary ms-3" })
</p>
<div class="table-responsive">
    <table class="table table-hover text-white fs-5">
        <thead class="bg-primary">
            <tr>
                <th>
                    Foto
                </th>
                <th>
                    Team
                </th>
                
                <th>
                    Nome
                </th>
                <th>
                    Cognome
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nickname)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/Content/ImgPlayers/" + item.Photo)" alt="Player Photo" class="img-fluid" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teams.Name)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nickname)
                    </td>
                    <td>
                        @Html.ActionLink("Modifica", "Edit", new { id = item.PlayerID }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Dettagli", "Details", new { id = item.PlayerID }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Elimina", "Delete", new { id = item.PlayerID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
