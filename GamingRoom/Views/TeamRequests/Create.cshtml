@model GamingRoom.Models.TeamRequest

@{
    ViewBag.Title = "Richiedi Creazione Team";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "TeamRequests", FormMethod.Post, new { @class = "form-horizontal ms-4", @style = "height:100vh", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-group text-white">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="Name" class="control-label col-md-2">Nome Team</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Description" class="control-label col-md-2">Descrizione</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="CreatedBy" class="control-label col-md-2">Creato Da</label>
        <div class="col-md-10">
            @Html.DropDownList("CreatedBy", (IEnumerable<SelectListItem>)ViewBag.CreatedBy, "Seleziona Utente", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Invia Richiesta" class="btn btn-primary" />
        </div>
    </div>
</div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
