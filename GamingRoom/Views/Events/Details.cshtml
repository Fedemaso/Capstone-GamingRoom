@model GamingRoom.Models.Events

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="text-light">
    <h4>Events</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd>
            <img src="@Url.Content("~/Content/ImgEvents/" + Model.Photo)" alt="Event Photo" width="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Venues.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Venues.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Users.Username)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Users.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TicketPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>Team Partecipanti:</dt>
        <dd>
            @if (Model.Teams != null && Model.Teams.Any())
            {
                <ul>
                    @foreach (var team in Model.Teams)
                    {
                        <li>@Html.DisplayFor(modelItem => team.Name)</li>
                    }
                </ul>
            }
            else
            {
                <p>Nessun team partecipante</p>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

