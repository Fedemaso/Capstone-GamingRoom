@model GamingRoom.Models.Cart

@if (Model != null && Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Evento</th>
                <th>Data</th>
                <th>Quantità</th>
                <th>Prezzo</th>
                <th>Totale</th>
                <th></th> <!-- Colonna per il pulsante di rimozione -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Event.Name</td>
                    <td>@item.Event.Date.ToString("dd/MM/yyyy")</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:C}", item.Price)</td>
                    <td>@String.Format("{0:C}", item.Total)</td>
                    <td>
                        <button class="btn btn-danger remove-item" data-item-id="@item.CartItemID">Rimuovi</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p class="text-right">
        <strong>Totale Carrello: </strong> @String.Format("{0:C}", Model.CartItems.Sum(i => i.Total))
    </p>
    <p class="text-right">
        <button class="btn btn-warning" id="empty-cart">Svuota Carrello</button>
    </p>
}
else
{
    <p>Il tuo carrello è vuoto.</p>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            // Rimuovi un elemento dal carrello
            $('.remove-item').click(function() {
                var itemId = $(this).data('item-id');
                $.post('/Carrello/RimuoviDalCarrello', { cartItemId: itemId }, function(data) {
                    // Aggiorna la vista parziale del carrello
                    $('#cart-summary').html(data);
                });
            });

            // Svuota il carrello
            $('#empty-cart').click(function() {
                $.post('/Carrello/SvuotaCarrello', function(data) {
                    // Aggiorna la vista parziale del carrello
                    $('#cart-summary').html(data);
                });
            });
        });
    </script>
}
